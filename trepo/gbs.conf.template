[general]
#Current profile name which should match a profile section name
profile = profile.{target_type}

########################### PROFILES ############################
[profile.standard]
repos = repo.base, repo.base-arm, repo.base-arm-debug, repo.base-arm64, repo.base-arm64-debug, repo.base-ia32, repo.base-ia32-debug, repo.base-x86_64, repo.base-x86_64-debug, repo.unified-standard

[profile.emulator]
repos = repo.base, repo.base-ia32, repo.base-ia32-debug, repo.base-x86_64, repo.base-x86_64-debug, repo.unified-emulator

########################### REPO ADDRESSES ############################
[repo.base]
url={base_url}/{base_version}/repos/standard/packages/
[repo.base-arm]
url={base_url}/{base_version}/repos/arm/packages/
[repo.base-arm64]
url={base_url}/{base_version}/repos/arm64/packages/
[repo.base-ia32]
url={base_url}/{base_version}/repos/ia32/packages/
[repo.base-x86_64]
url={base_url}/{base_version}/repos/x86_64/packages/
[repo.base-arm-debug]
url={base_url}/{base_version}/repos/arm/debug/
[repo.base-arm64-debug]
url={base_url}/{base_version}/repos/arm64/debug/
[repo.base-ia32-debug]
url={base_url}/{base_version}/repos/ia32/debug/
[repo.base-x86_64-debug]
url={base_url}/{base_version}/repos/x86_64/debug/
[repo.unified-standard]
url={unified_url}/{snapshot_version}/repos/standard/packages/
[repo.unified-emulator]
url={unified_url}/{snapshot_version}/repos/emulator/packages/
